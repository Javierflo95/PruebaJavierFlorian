@model IEnumerable<Entities.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool crearTarea = false;
    bool.TryParse(Session["puedeCrearTarea"].ToString(), out crearTarea);

}

<hr />
<p>
    @Html.ActionLink("Crear nuevo Usuario", "Create")
</p>

<br />
<table class="table table-bordered table-hover table-condensed table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.userName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.crearTarea)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.crearTarea)
                </td>
                <td>
                    @Html.ActionLink("Actualizar", "Edit", new { userName = item.userName }, new { @class = "btn btn-primary btn-sm" }) |

                    @if (crearTarea)
                    {@Html.ActionLink("Crear Tarea", "Create", "Task", new { userName = item.userName }, new { @class = "btn btn-primary btn-sm" });
                }

                    @Html.ActionLink("Eliminar", null, null, new { @class = "btnEliminar btn btn-primary btn-sm", @data_id = item.userName })
                </td>
            </tr>
        }
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/User")
}
